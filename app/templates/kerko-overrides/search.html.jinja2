{# CF custom template #}

{# Temporary workaround for a bug that was fixed in a later Kerko version (commit 63ce29b) #}
{%- if not total_count %}
    {%- set total_count = 0 %}
    {%- set total_count_formatted = 0 %}
{%- endif %}

{% extends 'kerko/search.html.jinja2' %}

{% block search_results_list %}
    <ul class="mb-4 list-unstyled {% if print_preview %}search-print-preview{% endif %}">
        {%- for result, result_url in search_results %}
            {%- include "kerko-overrides/_search-result.html.jinja2" %}
        {%- endfor %}
    </ul>
{% endblock search_results_list %}
